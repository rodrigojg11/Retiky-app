<section class="bg-dark text-white py-4">
  <div class="container">
    <%= form_with url: search_flights_path, method: :get, local: true, html: { class: "row g-2 align-items-end" } do %>
      <!-- Origin -->
      <div class="col-md-2">
        <label for="from" class="form-label text-white">From</label>
        <%= text_field_tag :from, params[:from], class: "form-control", placeholder: "e.g. MEX" %>
      </div>

      <!-- Destination -->
      <div class="col-md-2">
        <label for="to" class="form-label text-white">To</label>
        <%= text_field_tag :to, params[:to], class: "form-control", placeholder: "e.g. JFK" %>
      </div>

      <!-- Departure Date -->
      <div class="col-md-2">
        <label for="departure_date" class="form-label text-white">Departure</label>
        <%= date_field_tag :departure_date, params[:departure_date], class: "form-control" %>
      </div>

      <!-- Return Date -->
      <div class="col-md-2">
        <label for="return_date" class="form-label text-white">Return</label>
        <%= date_field_tag :return_date, params[:return_date], class: "form-control" %>
      </div>

      <!-- Passengers (optional for now) -->
      <div class="col-md-3">
        <label for="passengers" class="form-label text-white">Passengers</label>
        <%= text_field_tag :passengers, params[:passengers], class: "form-control", placeholder: "e.g. 1 Adult" %>
      </div>

      <!-- Submit Button -->
      <div class="col-md-1 d-grid">
        <%#= link_to "Search", ticket_path(@ticket), class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

