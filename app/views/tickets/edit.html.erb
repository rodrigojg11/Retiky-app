<div class="ticket-edit-container">
  <!-- Header -->
  <div class="edit-header">
    <h1>‚úèÔ∏è Editar Ticket</h1>
    <div class="header-actions">
      <%= link_to "‚Üê Ver Ticket", ticket_path(@ticket), class: "back-link" %>
      <%= link_to "Lista", tickets_path, class: "list-link" %>
    </div>
  </div>

  <!-- Informaci√≥n actual del ticket -->
  <div class="current-info">
    <h3>üìã Informaci√≥n Actual</h3>
    <div class="current-ticket-card">
      <div class="current-route">
        <span class="from"><%= @ticket.from %></span>
        <span class="arrow">‚úàÔ∏è</span>
        <span class="to"><%= @ticket.to %></span>
      </div>
      <div class="current-details">
        <span class="date">üìÖ <%= @ticket.date %></span>
        <span class="price">üí∞ $<%= @ticket.price %></span>
        <% if @ticket.has_active_offer? %>
          <span class="offer">‚ö° -<%= @ticket.discount %>% OFF</span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Formulario de edici√≥n -->
  <%= form_with(model: @ticket, local: true, class: "edit-form") do |form| %>

    <!-- Mostrar errores si existen -->
    <% if @ticket.errors.any? %>
      <div class="error-messages">
        <h4>‚ùå Hay algunos errores que corregir:</h4>
        <ul>
          <% @ticket.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-sections">

      <!-- Secci√≥n Ruta -->
      <div class="form-section">
        <h4>üõ´ Ruta de Vuelo</h4>
        <div class="form-row">
          <div class="form-group">
            <%= form.label :from, "Origen", class: "form-label" %>
            <%= form.text_field :from,
                placeholder: "Ciudad de origen",
                class: "form-input" %>
            <small class="field-help">Ciudad desde donde sale el vuelo</small>
          </div>

          <div class="form-group">
            <%= form.label :to, "Destino", class: "form-label" %>
            <%= form.text_field :to,
                placeholder: "Ciudad de destino",
                class: "form-input" %>
            <small class="field-help">Ciudad a donde llega el vuelo</small>
          </div>
        </div>
      </div>

      <!-- Secci√≥n Precio y Fecha -->
      <div class="form-section">
        <h4>üí∞ Detalles del Ticket</h4>
        <div class="form-row">
          <div class="form-group">
            <%= form.label :price, "Precio", class: "form-label" %>
            <div class="price-input-wrapper">
              <span class="currency-symbol">$</span>
              <%= form.number_field :price,
                  step: 0.01,
                  min: 0,
                  placeholder: "0.00",
                  class: "form-input price-input" %>
            </div>
            <small class="field-help">Precio en pesos mexicanos</small>
          </div>

          <div class="form-group">
            <%= form.label :date, "Fecha del Vuelo", class: "form-label" %>
            <%= form.date_field :date,
                min: Date.current,
                class: "form-input" %>
            <small class="field-help">No puede ser una fecha pasada</small>
          </div>
        </div>
      </div>

      <!-- Advertencia sobre ofertas activas -->
      <% if @ticket.has_active_offer? %>
        <div class="offer-warning">
          <div class="warning-content">
            <span class="warning-icon">‚ö†Ô∏è</span>
            <div class="warning-text">
              <strong>Oferta Rel√°mpago Activa</strong>
              <p>Este ticket tiene una oferta activa de <strong><%= @ticket.discount %>%</strong> que expira en <strong><%= @ticket.tiempo_restante_oferta %></strong>. Los cambios en el precio no afectar√°n la oferta actual.</p>
            </div>
          </div>
        </div>
      <% end %>

    </div>

    <!-- Acciones del formulario -->
    <div class="form-actions">
      <%= form.submit "üíæ Guardar Cambios", class: "btn btn-primary btn-large" %>
      <%= link_to "Cancelar", ticket_path(@ticket), class: "btn btn-secondary" %>

      <!-- Bot√≥n para eliminar (con confirmaci√≥n extra) -->
      <div class="danger-zone">
        <%= link_to "üóëÔ∏è Eliminar Ticket", ticket_path(@ticket),
                    method: :delete,
                    data: {
                      confirm: "‚ö†Ô∏è ¬øEst√°s SEGURO que quieres eliminar este ticket?\n\nEsta acci√≥n NO se puede deshacer.\n\nEscribe 'ELIMINAR' para confirmar:",
                      confirm_text: "ELIMINAR"
                    },
                    class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>

  <!-- Vista previa de cambios -->
  <div class="preview-section" id="previewSection" style="display: none;">
    <h3>üëÄ Vista Previa de Cambios</h3>
    <div class="preview-comparison">

      <!-- Antes -->
      <div class="preview-card before">
        <div class="preview-label">Antes</div>
        <div class="preview-route">
          <span id="beforeFrom"><%= @ticket.from %></span>
          <span class="arrow">‚úàÔ∏è</span>
          <span id="beforeTo"><%= @ticket.to %></span>
        </div>
        <div class="preview-details">
          <div id="beforeDate">üìÖ <%= @ticket.date %></div>
          <div id="beforePrice">üí∞ $<%= @ticket.price %></div>
        </div>
      </div>

      <!-- Despu√©s -->
      <div class="preview-card after">
        <div class="preview-label">Despu√©s</div>
        <div class="preview-route">
          <span id="afterFrom"><%= @ticket.from %></span>
          <span class="arrow">‚úàÔ∏è</span>
          <span id="afterTo"><%= @ticket.to %></span>
        </div>
        <div class="preview-details">
          <div id="afterDate">üìÖ <%= @ticket.date %></div>
          <div id="afterPrice">üí∞ $<%= @ticket.price %></div>
        </div>
      </div>
    </div>
  </div>

</div>

